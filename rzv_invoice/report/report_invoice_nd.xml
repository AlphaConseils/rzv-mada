<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="invoice_rzv_report_nd" model="ir.actions.report">
        <field name="name">Invoice ND</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">rzv_invoice.rzv_invoice_report_nd</field>
        <field name="report_file">rzv_invoice.rzv_invoice_report_nd</field>
        <field name="attachment_use" eval="True" />
        <field name="binding_model_id" ref="model_account_move" />

    </record>
    <record id="paperformat_invoice_nd_summary_report" model="report.paperformat">
        <field name="name">Sale Summary</field>
        <field name="default" eval="False" />
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">28</field>
        <field name="margin_right">7</field>
        <field name="margin_left">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="rzv_invoice.invoice_rzv_report_nd" model="ir.actions.report">
        <field name="paperformat_id" ref="rzv_invoice.paperformat_invoice_nd_summary_report" />
    </record>

    <!-- get old  -->
    <template id="rzv_invoice.rzv_invoice_report_nd">

        <t t-call="web.html_container">

            <t t-foreach="docs" t-as="o">
                <t t-if="not o" t-set="o" t-value="doc" />
                <!-- ####odoo defaults#### -->
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>
                
                <div class="article mt0 o_report_layout_standard" style="font-size:12px">
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="header_body">
                        <div style="width: 100%;text-align:center;">
                            <span>
                                <b>
                                    Facture en Ariary

                                </b>
                            </span>


                        </div>

                        <div style="width: 100%;text-align:right;">
                            <div>
                                <b>
                                    Client:
                                    <br/>
                                </b>
                                <span t-esc="o.partner_id.name" />

                            </div>
                            <div>
                                <span t-esc="o.partner_id.street" />
                                <span t-esc="o.partner_id.street2" />
                            </div>
                            <!-- <div>
                                    NIF:
                                    <span t-esc="o.partner_id.nif" />
                                </div>
                                <div>
                                    STAT:
                                    <span t-esc="o.partner_id.stat" />
                                </div>
                                <div>
                                    CIF:
                                    <span t-esc="o.partner_id.cif" />
                                </div> -->
                        </div>
                        <div>
                            <span>Facture n°</span>
                            <span style="font-weight: bold;">
                                <span t-esc="o.name" />
                            </span>
                            <span style="float: right;">
                                <div style="width:250px;text-align:right">
                                    <!-- TODO put method in account.move to set date in letter -->
                                    <t t-if="(o.invoice_date) ">
                                        <span t-esc="o.convert_date(o.invoice_date)" />
                                    </t>
                                    <!-- <span t-esc="o.convert_date(o.invoice_date)" /> -->
                                    <!-- <span t-field="o.date_order" t-options='{"format": "dd/MM/yyyy"}' /> -->
                                    <!-- <span t-esc="o.date_order" t-options='{"format": "dd/MM/yyyy"}' /> -->
                                </div>
                            </span>
                        </div>
                        <div>
                            <span>Origine</span>
                            <span style="font-weight: bold;">
                                <span t-esc="o.invoice_origin" />
                            </span>

                        </div>
                        <!-- <div>
                                <span>Référence client</span>
                                <span style="font-weight: bold;"> -->
                        <!-- <span t-esc="o.ref" />
                                </span>

                            </div> -->

                        <div style="margin-left: 2px;margin-right: 2px;">
                            <table style="width: 100%; border: 1px solid black;border-collapse: collapse; ">
                                <t t-set="sum_with_tva" t-value="0" />
                                <t t-set="sum_without_tva" t-value="0" />
                                <tbody>
                                    <tr>

                                        <td style="border: 1px solid;">Ligne n°</td>
                                        <td style="border: 1px solid;">Réf</td>
                                        <td style="border: 1px solid;">Designation</td>
                                        <td style="border: 1px solid;">Unité</td>
                                        <td style="border: 1px solid;">Quantité</td>
                                        <td style="border: 1px solid;">PU </td>
                                    </tr>
                                    <t t-set="count" t-value="1" />
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <tr>

                                            <td style="border: 1px solid;">
                                                <span t-esc="count" />
                                            </td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="line.product_id.product_tmpl_id.default_code" />

                                            </td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="line.product_id.name" />
                                            </td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="line.product_id.product_tmpl_id.uom_id.name" />
                                            </td>
                                            <td style="border: 1px solid;">
                                                <!-- TODO set here QTY of line -->
                                                <span t-esc="line.quantity" />
                                                <!-- <span t-esc="'{0:,.0f}'.format(round(o.amount_untaxed)).replace('.','%').replace(',',' ').replace('%',',')" style="word-break:break-all;"/> -->

                                            </td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                                <t t-set="sum_without_tva" t-value="(sum_without_tva + line.price_unit)*line.quantity" />
                                            </td>
                                            <!-- <td style="border: 1px solid;">
                                                <t t-if="(line.tax_ids)">
                                                    <span>20 %</span>
                                                    <t t-set="sum_with_tva" t-value="sum_with_tva + line.price_unit" />
                                                </t>
                                                <t t-else="">
                                                    <t t-set="sum_without_tva" t-value="sum_without_tva + line.price_unit" />
                                                </t>
                                            </td> -->
                                            <t t-set="count" t-value="count + 1" />


                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <div style="margin-top:20px;">
                            <table style="width: 40%; margin-right: 0px;  margin-left: auto; border: 1px solid black;border-collapse: collapse; ">
                                <tbody>
                                    

                                    <tr>
                                        <td style="border: 1px solid;">NET A PAYER</td>
                                        <td style="border: 1px solid;">
                                            <span t-esc="sum_without_tva" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div style="width: 100%;text-align: right;">

                                <span style="text-transform: capitalize;">
                                    <!-- <span t-esc="o.convert(round(o.amount_total),o.currency_id.name)[0]" /> -->
                                    <!-- <span t-esc="o.num_to_word(o.amount_total)" /> <span>AR</span> -->
                                    <span>
                                        <t t-esc="o.currency_id.amount_to_text(o.amount_total)" />
                                    </span>

                                </span>
                            </div>
                        </div>
                        <div>
                            <table style="border:1px solid;border-collapse: collapse; width: 50%">
                                <tbody>
                                    <tr>
                                        <td colspan="2" style="border: 1px solid; text-align: center;width:30%">
                                                Conditions de vente</td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid;">Échéance :</td>
                                        <td style="border: 1px solid;">
                                            <t t-if="o.invoice_payment_term_id">
                                                <t t-esc="o.invoice_payment_term_id.name" />
                                            </t>
                                            <t t-else="">
                                                <t t-esc="o.invoice_date_due" />
                                            </t>


                                            <!-- <span t-esc="o.get_echeance_nd(o.invoice_origin)" /> -->


                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid;">Montant:</td>
                                        <td style="border: 1px solid;">
                                            <span t-esc="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />

                                            </td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid;">Mode de paiement :</td>
                                        <td style="border: 1px solid;">
                                            <!-- TODO Mode de paiement -->
                                            <span t-esc="o.payment_reference" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="footer o_standard_footer" style="border-top: 1px solid black;">
                    <div class="row text-center">
                        <div class="col col-12 text-center">
                            <div>
                                <span t-esc="company.phone" />
                                <span t-esc="company.website" />

                            </div>
                            <ul class="list-inline">
                                <li class="list-inline-item">Page:</li>
                                <li class="list-inline-item">
                                    <span class="page" />
                                </li>
                                <li class="list-inline-item">/</li>
                                <li class="list-inline-item">
                                    <span class="topage" />
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </t>
        </t>
    </template>


</odoo>