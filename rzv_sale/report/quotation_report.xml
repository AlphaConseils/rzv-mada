<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="quotation_rzv" model="ir.actions.report">
        <field name="name">Quotation / Command</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">rzv_sale.rzv_quotation_report</field>
        <field name="report_file">rzv_sale.rzv_quotation_report</field>
        <field name="attachment_use" eval="True" />
        <field name="binding_model_id" ref="model_sale_order" />
    </record>
    
    <record id="paperformat_sale_summary_report" model="report.paperformat">
        <field name="name">Sale Summary</field>
        <field name="default" eval="False" />
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">28</field>
        <field name="margin_right">7</field>
        <field name="margin_left">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>

    <record id="rzv_sale.quotation_rzv" model="ir.actions.report">
        <field name="paperformat_id" ref="rzv_sale.paperformat_sale_summary_report" />
    </record>

    <!-- get old  -->
    <template id="rzv_quotation_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-if="not o" t-set="o" t-value="doc" />
                <!-- ####odoo defaults#### -->
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>
                <div class="header" style="border-bottom: 1px solid black;">
                    <table style="width:100%">
                        <thead>
                            <tr>
                                <td style="width:20%">
                                    <img t-if="company.logo" style="max-height:80px" t-att-src="image_data_uri(company.logo)" />
                                </td>
                                <td style="width:30%">
                                    <table style="font-size:12px">
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <strong>

                                                        <span>
                                                            ENDISMAD SARL
                                                        </span>
                                                    </strong>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Bâtiment Y6, Z.I. Akoor’,</td>
                                            </tr>
                                            <tr>
                                                <td>Digue Andohatapenaka, Antananarivo</td>
                                            </tr>
                                            <tr>
                                                <td>NIF : 4001980185</td>
                                            </tr>
                                            <tr>
                                                <td>STAT : 46900 41 2015 0 00372</td>
                                            </tr>
                                            <tr>
                                                <td>CIF : 0009214/DGI-H DU 06/07/2020</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                                <td style="text-align:center">
                                    <img src="/rzv_base/static/src/img/paper_store.png" alt="paper store" style="max-height: 45px;" />

                                    <!-- <img t-if="company.paper_store_img" style="max-height: 45px;" t-att-src="image_data_uri(company.paper_store_img)" /> -->

                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="article mt0 o_report_layout_standard" style="font-size:12px">
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="header_body">
                        <div style="width: 100%;text-align:center;">
                            <t t-if="(o.state) == 'draft'">
                                <span>
                                    <b>

                                        DEVIS en Ariary
                                    </b>
                                </span>
                            </t>
                            <t t-if="(o.state) == 'sale'">
                                <span>
                                    <b>
                                        COMMANDE en Ariary

                                    </b>
                                </span>
                            </t>
    
                        </div>
    
                        <div style="width: 100%;text-align:right;">
                            <div>
                                <b>
                                    <span>Client:</span><br/>
                                </b>
                                <span t-esc="o.partner_id.name" />
    
                            </div>
                            <div>
                                <span t-esc="o.partner_id.street" />
                                <span t-esc="o.partner_id.street2" />
                            </div>
                            <div>
                                NIF:
                                <span t-esc="o.partner_id.nif" />
                            </div>
                            <div>
                                STAT:
                                <span t-esc="o.partner_id.stat" />
                            </div>
                            <div>
                                CIF:
                                <span t-esc="o.partner_id.cif" />
                            </div>
                        </div>
                        <div>
                            <span>Commande / Devis n°</span>
                            <span style="font-weight: bold;">
                                <span t-esc="o.name" />
                            </span>
                            <span style="float: right;">
                                <div style="width:250px;text-align:right">
                                        <span t-esc="o.convert_date(o.date_order)" />
                                        <!-- <span t-field="o.date_order" t-options='{"format": "dd/MM/yyyy"}' /> -->
                                        <!-- <span t-esc="o.date_order" t-options='{"format": "dd/MM/yyyy"}' /> -->
                                </div>
                            </span>
                        </div>
    
                        <div style="margin-left: 2px;margin-right: 2px;">
                            <table style="width: 100%; border: 1px solid black;border-collapse: collapse; ">
                                <tbody>
                                    <t t-set="sum_with_tva" t-value="0" />
                                    <t t-set="sum_without_tva" t-value="0" />
                                    <t t-set="sum_ht" t-value="0" />

                                    <tr>
    
                                        <td style="border: 1px solid;">Ligne n°</td>
                                        <td style="border: 1px solid;">Réf</td>
                                        <td style="border: 1px solid;">Designation</td>
                                        <td style="border: 1px solid;">Unité</td>
                                        <td style="border: 1px solid;">Quantité</td>
                                        <td style="border: 1px solid;">PU HT (ar)</td>
                                        <td style="border: 1px solid;">TVA</td>
                                    </tr>
                                    <t t-set="count" t-value="1" />
                                    <t t-foreach="o.order_line" t-as="line">
                                        <tr>
    
                                            <td style="border: 1px solid;">
                                                <span t-esc="count" />
                                            </td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="line.product_id.product_tmpl_id.default_code" />
    
                                            </td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="line.product_id.name" />
                                            </td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="line.product_id.product_tmpl_id.uom_id.name" />
                                            </td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="line.product_uom_qty" />
                                                <!-- <span t-esc="'{0:,.0f}'.format(round(o.amount_untaxed)).replace('.','%').replace(',',' ').replace('%',',')" style="word-break:break-all;"/> -->
    
                                            </td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
    
                                            </td>
                                            <td style="border: 1px solid;">
                                                <t t-if="(line.price_tax) ">
                                                    <t t-set="sum_ht" t-value="((line.price_unit-20)/100)*line.product_uom_qty" />
                                                    <t t-set="sum_with_tva" t-value="(sum_with_tva + line.price_unit) * line.product_uom_qty" />
                                                    <span>20 %</span>
                                                </t>
                                                <t t-else="">
                                                    
                                                    <t t-set="sum_without_tva" t-value="(sum_without_tva + line.price_unit) * line.product_uom_qty" />
                                                </t>
                                                <!-- <span t-esc="o.tax_totals_json" /> -->
                                            </td>
                                            <t t-set="count" t-value="count + 1" />
    
    
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <div style="margin-top:20px;">
                            <table style="width: 40%; margin-right: 0px;  margin-left: auto; border: 1px solid black;border-collapse: collapse; ">
                                <tbody>
                                    <t t-if="(sum_with_tva) ">
                                        <tr>
                                            <td style="border: 1px solid;">Montant taxable</td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="sum_with_tva" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                            </td>
                                        </tr>

                                    </t>
                                    <tr>
                                        <td style="border: 1px solid;">NET HT</td>
                                        <td style="border: 1px solid;">
                                            <span t-esc="o.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid;">TVA 20%</td>
                                        <td style="border: 1px solid;">
                                            <span t-esc="o.amount_tax" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                        </td>
                                    </tr>
                                    
    
    
                                    <t t-if="(sum_without_tva)">
                                        <tr>
                                            <td  style="border: 1px solid;">
                                                MONTANT EXONERE
                                            </td>
                                            <td style="border: 1px solid;">
                                                <span t-esc="sum_without_tva" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                            </td>
                                        </tr>
                                    </t>
    
                                    <tr>
                                        <td style="border: 1px solid;">NET A PAYER</td>
                                        <td style="border: 1px solid;">
                                            <span t-esc="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div style="width: 100%;text-align: right;">
    
                                <span style="text-transform: capitalize;">
                                    <!-- <span t-esc="o.convert(round(o.amount_total),o.currency_id.name)[0]" /> -->
                                    <!-- <span t-esc="o.num_to_word(o.amount_total)" /> <span>AR</span> -->
                                    <span>
                                        <t t-esc="o.currency_id.amount_to_text(o.amount_total)" />
                                    </span>
    
                                </span>
                            </div>
                        </div>
                        <div>
                            <table style="border:1px solid;border-collapse: collapse;">
                                <tbody>
                                    <tr>
                                        <td colspan="2" style="border: 1px solid; text-align: center;">
                                                    Conditions de vente</td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid;">Échéance:</td>
                                        <td style="border: 1px solid;">100% à la commande</td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid; white-space: nowrap;">Validité de l'offre:</td>
                                        <td style="border: 1px solid;">15 jours, dans la limite des stocks
                                                    disponibles</td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid; white-space: nowrap;">Délai de livraison:</td>
                                        <td style="border: 1px solid;">15 jours</td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid; white-space: nowrap;">Mode de paiement :</td>
                                        <td style="border: 1px solid;">CHEQUE ou VIREMENT, à votre
                                                    convenance</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="footer o_standard_footer" style="border-top: 1px solid black;">
                    <div class="row text-center">
                        <div class="col col-12 text-center">
                            <div>
                                <span t-esc="company.phone" />
                                <span t-esc="company.website" />

                            </div>
                            <ul class="list-inline">
                                <li class="list-inline-item">Page:</li>
                                <li class="list-inline-item">
                                    <span class="page" />
                                </li>
                                <li class="list-inline-item">/</li>
                                <li class="list-inline-item">
                                    <span class="topage" />
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </t>

        </t>
    </template>


</odoo>